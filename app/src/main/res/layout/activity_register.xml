<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.RegisterActivity"
        android:background="#FEF6E4">
        <TextView
            android:id="@+id/register_TXT_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:fontFamily="@font/josefinsans_bold"
            android:textSize="40sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:textColor="#001858"
            />

        <LinearLayout

            android:layout_below="@+id/register_TXT_headline"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="100dp"
            android:layout_alignStart="@id/register_TXT_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/register_BTN_photo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                app:backgroundTint="#FEF6E4"
                android:text="add photo"
                android:textSize="30sp"
                android:textColor="#9A9797"
                />

            <EditText
                android:id="@+id/register_ETXT_name"
                android:text="Name"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textColor="#9A9797"
                android:textSize="24dp"
                android:fontFamily="@font/normal_txt"
                android:layout_marginTop="10dp"
                />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/register_BTN_supplier"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Supplier"
                android:textColor="#9A9797"
                android:textSize="22dp"
                android:fontFamily="@font/normal_txt"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/register_BTN_create"
                android:layout_width="289dp"
                android:layout_height="73dp"
                android:layout_centerInParent="true"
                app:backgroundTint="#8BD3DD"
                android:layout_marginTop="15dp"
                app:cornerRadius="39dp"
                android:text="create account"
                android:textColor="#001858"
                android:fontFamily="@font/josefinsans_medium"
                android:textSize="20sp"
                />


        </LinearLayout>

    </RelativeLayout>