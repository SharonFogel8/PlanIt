<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.ExtraLarge"
    android:layout_marginBottom="10dp"
    android:backgroundTint="#FEF6E4"
    >
<LinearLayout
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#FEF6E4"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/eventList_IMG_event"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="#878383"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
         />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_marginEnd="20dp"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/eventList_TXT_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Name"
            android:maxLines="2"
            android:fontFamily="@font/josefinsans_bold"
            android:layout_marginTop="10dp"
            android:textColor="#001858"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/eventList_TXT_Date"
            android:layout_width="match_parent"
            android:textColor="#001858"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Date"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/josefinsans_medium"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/eventList_TXT_location"
            android:layout_width="match_parent"
            android:textColor="#001858"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:maxLines="2"
            android:text="Location"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/josefinsans_medium"
            />


    </LinearLayout>
</LinearLayout>

</com.google.android.material.card.MaterialCardView>